---
import CssIcon from './icons/Technologies/CssIcon.astro';
import HtmlIcon from './icons/Technologies/HtmlIcon.astro';
import JavaScriptIcon from './icons/Technologies/JavaScriptIcon.astro';
import NodeIcon from './icons/Technologies/NodeIcon.astro';
import MysqlIcon from './icons/Technologies/MysqlIcon.astro';
import AndroidIcon from './icons/Technologies/AndroidIcon.astro';
import GitIcon from './icons/Technologies/GitIcon.astro';
import PythonIcon from './icons/Technologies/PythonIcon.astro';
import GoIcon from './icons/Technologies/GoIcon.astro';
---

<div class="stack-tecnologico flex flex-row flex-wrap justify-around gap-6 animacion-horizontal p-10">
    <div class="tecnologia flex flex-col text-center">
        <HtmlIcon class="h-20 hover:animate-pulse hover:stroke-orange-500"/>
        <p>HTML</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <CssIcon class="h-20 hover:animate-pulse hover:stroke-blue-300"/>
        <p>CSS</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <JavaScriptIcon class="h-20 hover:animate-pulse hover:stroke-yellow-300"/>
        <p>JavaScript</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <NodeIcon class="h-20 hover:animate-pulse hover:stroke-green-600"/>
        <p>Node.js</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <AndroidIcon class="h-20 hover:animate-pulse hover:stroke-green-400"/>
        <p>Android</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <PythonIcon class="h-20 hover:animate-pulse hover:stroke-cyan-700"/>
        <p>Python</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <GoIcon class="h-20 hover:animate-pulse hover:stroke-teal-600"/>
        <p>Go</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <MysqlIcon class="h-20 hover:animate-pulse hover:stroke-teal-600"/>
        <p>MySQL</p>
    </div>
    <div class="tecnologia flex flex-col text-center">
        <GitIcon class="h-20 hover:animate-pulse hover:stroke-purple-500"/>
        <p>Git</p>
    </div>
</div>
